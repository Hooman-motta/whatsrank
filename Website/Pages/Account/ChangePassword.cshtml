@page
@model Website.Pages.Account.ChangePasswordModel
@{
    ViewBag.Title = "تغییر کلمه عبور";
}

<div class="row user-panel">
    <partial name="_Aside" />
    <div class="col-12 col-md-9 left">
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-ok alert-dismissible fade show" role="alert">
                @Model.Message
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <form method="post">
            <div class="row my-2">
                <div class="col-6 col-md-6">
                    <label asp-for="Input.OldPassword" class="form-label"></label>
                    <div class="col-sm-12">
                        <input asp-for="Input.OldPassword" class="form-control">
                    </div>
                    <span asp-validation-for="Input.OldPassword"></span>
                </div>
            </div>

            <div class="row my-3">
                <div class="col-6 col-md-6">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <div class="col-sm-12">
                        <input asp-for="Input.Password" class="form-control">
                    </div>
                    <span asp-validation-for="Input.Password"></span>
                </div>
            </div>

            <div class="row my-3">
                <div class="col-6 col-md-6">
                    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                    <div class="col-sm-12">
                        <input asp-for="Input.ConfirmPassword" class="form-control">
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword"></span>
                </div>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn-submit">
                    ثبت
                </button>
            </div>
        </form>
    </div>
</div>