@page
@model Website.Pages.Account.ResumeModel
@{
    ViewBag.Title = "رزومه کاربر";
}
<style>
    .la-link {
        color: green;
        font-size: 1.5rem;
    }
</style>
<div class="row user-panel cinema-role">
    <partial name="_Aside" />
    <div class="col-12 col-md-9 left">
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-ok alert-dismissible fade show" role="alert">
                @Model.Message
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">عنوان</th>
                    <th scope="col">لینک</th>
                    <th scope="col">عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.List)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td title="@item.VideoUrl">
                            <a href="@item.VideoUrl" target="_blank">
                                <i class="las la-link"></i>
                            </a>
                        </td>
                        <td>
                            <form asp-page="./Resume" asp-page-handler="Delete" class="d-grid col-md-3 col-6 mx-auto"
                            onsubmit="return confirm('آیا مطمئن هستید...؟');">
                                <input type="hidden" value="@item.Id" name="id">
                                <button type="submit" class="btn btn-outline-danger">
                                    حذف
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>