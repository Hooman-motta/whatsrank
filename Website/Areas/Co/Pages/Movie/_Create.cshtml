@model MovieBaseModel.InputModel

<form asp-page="" enctype="multipart/form-data">
    <div class="row">
        <div class="col-6 col-md-4">
            <label asp-for="FormFile" class="col-form-label"></label>
            <div class="col-sm-12">
                <input asp-for="FormFile" class="form-control">
            </div>
            <span asp-validation-for="FormFile"></span>
        </div>

        <div class="col-6 col-md-8">
            <label asp-for="Title" class="col-form-label"></label>
            <div class="col">
                <input asp-for="Title" class="form-control">
            </div>
            <span asp-validation-for="Title"></span>
        </div>
    </div>

    <div class="row my-2">
        <div class="col-6 col-md-3">
            <label asp-for="KeyWord" class="col-form-label"></label>
            <div class="col">
                <input asp-for="KeyWord" class="form-control">
            </div>
            <span asp-validation-for="KeyWord"></span>
        </div>

        <div class="col-6 col-md-3">
            <div data-picker>
                <label asp-for="ReleaseDate" class="col-form-label"></label>
                <div class="col" data-date>
                    <input asp-for="ReleaseDate" class="form-control" readonly>
                    <button type="button" data-trigger>
                        <i class="las choose"></i>
                        <i class="las reset"></i>
                    </button>
                </div>
                <span asp-validation-for="ReleaseDate"></span>
                <div data-container></div>
            </div>
        </div>

        <div class="col-6 col-md-3">
            <label asp-for="Hours" class="col-form-label"></label>
            <div class="col">
                <input asp-for="Hours" class="form-control text-center">
            </div>
            <span asp-validation-for="Hours"></span>
        </div>

        <div class="col-6 col-md-3">
            <label asp-for="Minutes" class="col-form-label"></label>
            <div class="col">
                <input asp-for="Minutes" class="form-control text-center">
            </div>
            <span asp-validation-for="Minutes"></span>
        </div>
    </div>

    <div class="row px-2">
        @for (int i = 0; i < Model.JenreTypes.Count; i++)
        {
            <div class="col-3 col-md-2 my-2 p-0">
                <input type="checkbox" asp-for="@Model.JenreTypes[i].Selected">
                <label class="form-check-label" style="font-size: .9rem;" for="@Model.JenreTypes[i].Selected">
                    @(EnumExtensions.GetDisplayName ((JenreType)Model.JenreTypes[i].JenreType))
                </label>
                <input type="hidden" asp-for="@Model.JenreTypes[i].JenreType">
            </div>
        }
    </div>

    <div class="row">
        <div class="col-12" data-tags='@Url.Page("/Tags/Index","TagsList")'>
            <label asp-for="Tags" class="col-form-label"></label>
            <input asp-for="Tags">
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12" data-source>
            <textarea asp-for="Source"></textarea>
        </div>
    </div>

    <div class="my-2">
        <input type="hidden" asp-for="Id">
        <button type="submit" class="btn btn-outline-dark">ثبت</button>
    </div>
</form>